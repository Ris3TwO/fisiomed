---
import BaseLayout from "@/layouts/BaseLayout.astro";

const { t } = Astro.props;
---

<BaseLayout title={t("about.title")} isSubPage={true}>
  <section
    class="min-h-[100dvh] relative isolate overflow-hidden text-white py-24 -mt-[72px] md:-mt-[120px] lg:-mt-[90px] flex flex-col justify-center items-center text-center bg-black bg-opacity-50"
  >
    <p
      class="max-w-lg xl:max-w-7xl mx-auto px-4 lg:px-0 text-lg md:text-xl lg:text-2xl"
    >
      <p
        class="max-w-lg xl:max-w-7xl mx-auto px-4 lg:px-0 text-lg md:text-xl lg:text-2xl"
      >
        {t("about.message")}
      </p>
    </p>
  </section>
</BaseLayout>
