---
import { DEFAULT_LOCALE, type Locale } from "@/i18n/config";
import { useTranslations } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import LastPosts from "@/components/sections/LastPosts.astro";
import CategoriesSection from "@/components/sections/CategoriesSection.astro";
import SuggestedBooks from "@/components/sections/SuggestedBooks.astro";
import Team from "@/components/sections/Team.astro";

const lang: Locale = Astro.currentLocale || DEFAULT_LOCALE;
const t = useTranslations(lang);
---

<BaseLayout title={t("homepage.title")}>
  <Hero t={t} />
  <LastPosts />
  <SuggestedBooks t={t} />
  <CategoriesSection t={t} />
  <Team t={t} />
</BaseLayout>
