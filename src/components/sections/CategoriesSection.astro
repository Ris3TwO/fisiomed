---
import { getCategories } from "@/services/wordpress/wp";
import Categories from "@/components/ui/Categories";
import { DEFAULT_LOCALE } from "@/i18n/config";

const lang = Astro.currentLocale || DEFAULT_LOCALE;
const initialCategories = await getCategories(6, lang);
---

<Categories
  client:only="preact"
  initialCategories={initialCategories.nodes}
  lang={lang}
/>
