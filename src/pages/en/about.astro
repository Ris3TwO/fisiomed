---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="About us">
  <section
    class="min-h-[100dvh] relative isolate overflow-hidden text-white py-24 -mt-[72px] md:-mt-[120px] lg:-mt-[90px] flex flex-col justify-center items-center text-center bg-black bg-opacity-50"
  >
    <p class="max-w-lg xl:max-w-7xl mx-auto px-4 lg:px-0 text-lg md:text-xl lg:text-2xl">
      {t("about.message")}
    </p>
  </section>
</BaseLayout>
